<h1>Task details</h1>
<h2><%= @task.title %></h2>
<div class="d-flex gap-1">
  <% if @task.completed%>
    <i class="fa-regular fa-square-check"></i><p><%= @task.details %></p>
  <% else %>
    <i class="fa-regular fa-square"></i><p><%= @task.details %></p>
  <% end %>
</div>


<p><%= link_to "Edit task", edit_task_path %></p>
<p><%= link_to "Destroy task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
<p><%= link_to "Back to task list", tasks_path %></p>
